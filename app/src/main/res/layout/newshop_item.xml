<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/newshop"
            android:layout_width="1000dp"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:background="@mipmap/bitmap" />

        <TextView
            android:id="@+id/tv_newshop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/newshop"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="250dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="5dp"
            android:text="热销新品"
            android:textColor="#ff7f57"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/Iv_newImage"
            android:layout_width="25dp"
            android:layout_height="15dp"
            android:layout_alignTop="@+id/newshop"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="550dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:src="@mipmap/common_btn_more_yellow_n" />
    </RelativeLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/hot_recycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>