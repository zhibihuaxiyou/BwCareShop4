<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@mipmap/rectangle"
    android:layout_marginTop="16sp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <HorizontalScrollView
        android:id="@+id/lllli"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pop_tries"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:background="@null"
                android:text="男装"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/pop_dress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:background="@null"
                android:text="女装"
                android:textColor="#ff5f71"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/pop_shoes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:background="@null"
                android:text="女鞋"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/pop_T_shirt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:background="@null"
                android:text="T恤"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/pop_beauty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:background="@null"
                android:text="美妆护肤"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/pop_crm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:background="@null"
                android:text="手机数码"
                android:textColor="#ffffff"
                android:textSize="16sp" />

        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/pop1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="大绒毛衣"
        android:textSize="12sp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:layout_below="@+id/lllli"
        android:background="@null"
        android:layout_marginLeft="30dp"
        android:drawablePadding="10dp"
        android:drawableTop="@mipmap/category_icon_sweater_n"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/pop2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="裤装"
        android:textSize="12sp"
        android:textColor="#ffffff"
        android:layout_below="@+id/lllli"
        android:background="@null"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="30dp"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:layout_toRightOf="@+id/pop1"
        android:drawableTop="@mipmap/category_icon_pants_n"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/pop3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="裙装"
        android:textSize="12sp"
        android:textColor="#ffffff"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/lllli"
        android:background="@null"
        android:layout_marginLeft="30dp"
        android:drawablePadding="10dp"
        android:layout_toRightOf="@+id/pop2"
        android:drawableTop="@mipmap/category_icon_skirt_n"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/pop4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="外套"
        android:layout_marginBottom="20dp"
        android:textSize="12sp"
        android:textColor="#ffffff"
        android:layout_below="@+id/lllli"
        android:background="@null"
        android:layout_marginLeft="30dp"
        android:drawablePadding="10dp"
        android:layout_toRightOf="@+id/pop3"
        android:drawableTop="@mipmap/category_icon_coat_n"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/pop5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lllli"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="23dp"
        android:layout_marginBottom="20dp"
        android:layout_toRightOf="@+id/pop4"
        android:background="@null"
        android:drawableTop="@mipmap/category_icon_hoodie_n"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:text="卫衣"
        android:textColor="#ffffff"
        android:textSize="12sp" />

</RelativeLayout>
