<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/magic"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@mipmap/bitmap_3" />

        <TextView
            android:id="@+id/tv_magic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/magic"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="250dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="6dp"
            android:text="魔力时尚"
            android:textColor="#0ff"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/Iv_magicImage"
            android:layout_width="25dp"
            android:layout_height="15dp"
            android:layout_alignTop="@+id/newshop"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="550dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:src="@mipmap/home_btn_more_purple_n" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/magic_recycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>